---
apiVersion: build.openshift.io/v1
kind: BuildConfig
metadata:
  name: "{{ meta.name }}"
  namespace: "{{ meta.namespace }}"
  labels:
    app: "{{ meta.name }}"
spec:
  output:
    to:
      kind: ImageStreamTag
      name: "{{ meta.name }}:latest"
  source:
    contextDir: "{{ context_dir }}"
    git:
      ref: "{{ git_ref }}"
      uri: "{{ git_uri }}"
    type: Git
  strategy:
    sourceStrategy:
      env:
        - name: APP_FILE
{% if (build_type|lower == 'python') or (build_type|lower == 'python27') %}
          value: "{{ app_file | default('app.py') }}"
{% elif (build_type|lower == 'java') %}
          value: "{{ app_file }}"
{% else %}
          value: ""
{% endif %}
      from:
        kind: DockerImage
{% if (build_type|lower == 'python') or (build_type|lower == 'python27') %}
        name: "docker.io/radanalyticsio/radanalytics-pyspark:stable"
{% elif (build_type|lower == 'java') %}
        name: "docker.io/radanalyticsio/radanalytics-java-spark:stable"
{% else %}
        name: "{{ build_image }}"
{% endif %}
    type: Source
  triggers:
  - imageChange: {}
    type: ImageChange
  - type: ConfigChange
  - github:
      secret: "{{ meta.name }}"
    type: GitHub
  - generic:
      secret: "{{ meta.name }}"
    type: Generic
